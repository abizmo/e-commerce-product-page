---
import Icon from "./icon.astro";
---

<button>
  <Icon icon="cart" />
  Add button
</button>

<style>
  button {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;

    width: 100%;
    height: 3.5rem;
    border-radius: 0.5rem;
    background-color: var(--clr-primary);
    color: var(--clr-neutral-800);
    font-weight: var(--fw-bold);
    box-shadow: 0px 20px 30px rgba(255, 125, 27, 0.2);

    transition: all 0.3s ease-in-out;

    &:hover,
    &:focus-within {
      background-color: hsl(var(--hsl-orange) / 0.7);
    }
  }
</style>
