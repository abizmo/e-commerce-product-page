---
import Icon from "./icon.astro";

const { class: className, ...rest } = Astro.props;
---

<nav class:list={["product-navigation", className]} {...rest}>
  <button><Icon icon="previous" /></button>
  <button><Icon icon="next" /></button>
</nav>

<style>
  .product-navigation {
    display: flex;
    justify-content: space-between;
    padding: 1.5rem;

    button {
      background: var(--clr-neutral-100);
      color: var(--clr-neutral-800);
      border-radius: 50%;
      width: 2.5rem;
      height: 2.5rem;
      display: grid;
      place-content: center;
      cursor: pointer;
    }
  }
</style>
